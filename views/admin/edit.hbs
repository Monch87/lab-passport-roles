<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h2>Celebrities's edit Page</h2>

            <hr>

            <form method="POST" action="/users/{{id}}/edit">

                <div class="form-group">
                    <label for="username">UserName</label>
                    <input name="username" type="text" class="form-control" id="username">
                </div>

                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" type="text" class="form-control" id="name">
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <input name="description" type="text" class="form-control" id="description">
                </div>

                <div class="form-group">
                    <label for="facebookId">FacebookId</label>
                    <input name="facebookId" type="text" class="form-control" id="facebookId">
                </div>
                <div class="form-group">
                    <label for="role">Role</label>
                    <input name="role" type="text" class="form-control" id="role">
                </div>

                <button type="submit" class="btn btn-dark">Save Edit</button>
                <a class="btn btn-dark" href="/admin">Back to the list</a>
            </form>

        </div>
    </div>


</div>